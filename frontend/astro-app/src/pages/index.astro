---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1 class="text-slate-400">Choose Type</h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="./stock"
				title="Stocks"
				body="Actions for Stocks"
			/>
			<Card
				href="./transaction"
				title="Transactions"
				body="Actions for Transactions"
			/>
		</ul>
	</main>
</Layout>
